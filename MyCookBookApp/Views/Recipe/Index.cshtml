@model List<MyCookBookApp.Models.Recipe>

<div class="container mt-5">
    <h1 class="text-center mb-4">🍲 Recipe List</h1>
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.Name</h5>

                        <h6 class="text-muted">Ingredients:</h6>
                        <ul class="list-group list-group-flush">
                            @if (recipe.Ingredients != null && recipe.Ingredients.Any())
                            {
                                @foreach (var ingredient in recipe.Ingredients)
                                {
                                    <li class="list-group-item">@ingredient</li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">No ingredients available</li>
                            }
                        </ul>

                        <h6 class="mt-3">Steps:</h6>
                        <p class="card-text">@(!string.IsNullOrEmpty(recipe.Steps) ? recipe.Steps : "No steps provided")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>