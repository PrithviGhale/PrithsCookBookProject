@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to <span class="text-primary">PrithsCookBook</span></h1>
    <p class="lead">Discover delicious recipes, manage your cookbook, and plan your meals with ease!</p>
    <a class="btn btn-primary btn-lg mt-3" asp-controller="Recipe" asp-action="Index">View Recipes</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Why Use PrithsCookBook?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">📖 Organize Recipes</h5>
                    <p class="card-text">Easily store and access your favorite recipes in one place.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">🌐 Dynamic Access</h5>
                    <p class="card-text">Access your recipes dynamically through our connected API.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">🍽 Plan Meals</h5>
                    <p class="card-text">Use PrithsCookBook to plan and create delicious meals effortlessly.</p>
                </div>
            </div>
        </div>
    </div>
</div>
